<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgraund"
    tools:context=".Menu_principal">
    <View
        android:id="@+id/id_view1"
        style="@style/menus"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/conteiner_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
     />
    <View
        android:id="@+id/id_view01"
        style="@style/menus"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/conteiner_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/id_pesquisa"
        android:src="@drawable/ic_pesquisa"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="@id/id_view01"
        app:layout_constraintStart_toEndOf="@id/id_view01"
        app:layout_constraintTop_toTopOf="@id/id_view01"
        app:layout_constraintTop_toBottomOf="@id/id_view01"
        />
    <View
        android:id="@+id/id_view2"
        style="@style/menus"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/conteiner_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    />
    <View
        android:id="@+id/id_view3"
        style="@style/menus"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/conteiner_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/id_bike"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="BikeShared"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/id_menu"
        android:src="@drawable/ic_menu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="@id/id_view1"
        app:layout_constraintStart_toEndOf="@id/id_view1"
        app:layout_constraintTop_toTopOf="@id/id_view1"
        app:layout_constraintTop_toBottomOf="@id/id_view1"
        />
    <ImageView
        android:id="@+id/id_notificacao"
        android:src="@drawable/ic_notificacao"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="@id/id_view2"
        app:layout_constraintStart_toEndOf="@id/id_view2"
        app:layout_constraintTop_toTopOf="@id/id_view2"
        app:layout_constraintTop_toBottomOf="@id/id_view2"
        />
    <ImageView
        android:id="@+id/id_mensagem"
        android:src="@drawable/ic_sm"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="@id/id_view3"
        app:layout_constraintStart_toEndOf="@id/id_view3"
        app:layout_constraintTop_toTopOf="@id/id_view3"
        app:layout_constraintTop_toBottomOf="@id/id_view3"
        />
    <View
        android:id="@+id/contener"
        style="@style/ContainerComponente1"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_view3"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/id_levantar"
        style="@style/Button"
        android:drawableRight="@drawable/ic_bike"
        android:layout_marginTop="100dp"
        android:text="LEVANTAR BICICLETA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_view3" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/id_devolver"
        style="@style/Button"
        android:drawableRight="@drawable/ic_bike"
        android:text="DEVOLVER BICICLETA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_levantar" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/id_reservar"
        style="@style/Button"
        android:drawableRight="@drawable/ic_bike"
        android:text="RESERVAR BICICLETA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_devolver" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/id_listar"
        style="@style/Button"
        android:drawableRight="@drawable/ic_lista"
        android:text="LISTAR ESTAÇÕES"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_reservar" />



</androidx.constraintlayout.widget.ConstraintLayout>